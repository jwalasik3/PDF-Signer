<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.bskproject.MainAppController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Text>Welcome to the PDF Signature Tool!
        Please select a PDF file to sign.</Text>
    <Label fx:id="pdfName" />
    <Button text="Select PDF" onAction="#selectPdf"/>
    <Button text="Sign PDF" onAction="#signPdf"/>

</VBox>
